<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center filters" id="filters">
            <div class="col-md-10 mb-5 text-center">
                <ul class="product-category">
                    <li> <button class="btn btn-primary active" data-filter="*">All</button></li>
           
                @foreach (var item in Model.CategoryList)
                 {
                        <li> <button class="btn btn-primary" id="@item.Id" data-filter=".@item.Id">@item.CategoryName</button></li>
                   }
                </ul>
            </div>
        </div>
