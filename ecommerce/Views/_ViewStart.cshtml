@{

    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();

    string layout = "";
    var ps = Convert.ToString(Session["theme"]);
    if (controller.ToLower() == "shop" || ps=="shop")
    {
        layout = "~/Views/Shared/_Layout.cshtml";
    }
    else if (controller.ToLower() == "estore" || ps == "estore")
    {
        layout = "~/Views/Shared/_EstoreLayout.cshtml";
    }
    else if (controller.ToLower() == "minishop" | ps == "minishop")
    {
        layout = "~/Views/Shared/_MinishopLayout.cshtml";
    }
    else if (controller.ToLower() == "violet" || ps == "violet")
    {
        layout = "~/Views/Shared/_VioletLayout.cshtml";
    }
    else if (controller.ToLower() == "cake" || ps == "cake")
    {
        layout = "~/Views/Shared/_cakeLayout.cshtml";
    }
    else
    {
        layout = "~/Views/Shared/_Layout.cshtml";
    }

    Layout = layout;
}
